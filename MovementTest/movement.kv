#:kivy 1.9.1

<Block>:
    size: 32, 32
    canvas:
        Color:
            rgb: (self.brightness, self.brightness, self.brightness)
        Rectangle:
            texture: self.texture
            size: self.width, self.height
            pos: self.x, self.y

<Player>:
    size: 32, 32
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width, self.height
            pos: self.x, self.y

<MovementTest>
    player: player_char

    Player:
        id: player_char
        center_x: 32*root.init_x - 84
        center_y: 32*root.init_y + 16